#include <stdio.h>
int main () {
    int n , sum=0 , count=0;
    float average= 0.0 ; 
    
    printf("Enter total number to input = ");
    scanf("%d" ,&n); 
    
    int num[n];
    
    printf("Input the numbers = ");
     for(int i=0 ; i<n ; i++){
         scanf("%d" ,&num[i]); 
         
        if(num[i]>0){
            sum+=num[i];
            count+=1;
        }
     }
     if(count>0){
         average= (float)sum/count;
         printf("\nSum of all positive numbers = %d" ,sum);
     printf("\nAverage of all positive numbers = %.2f" ,average) ;
     }
     else {
         printf("No positive number entered.");
     }
    
    return 0 ; 
}
