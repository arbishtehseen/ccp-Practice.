#include <stdio.h>
int main() {
    long long fact = 1 ; 
    int num ; 
    int i = 1 ; 
    
    printf ("Enter a Number = ") ; 
    scanf  ("%d" , &num) ; 
    
    if (num <0) {
        printf ("Invalid Input.\n") ; 
        return 0 ; 
    }
    
    if (num==0) {
        printf ("Factorial of O is 1.\n") ; 
        return 0 ; 
    }
    
    for (i=1 ; i<=num ; i++) {
        fact = fact*i ; 
    }
    printf ("Factorial for %d is %lld." , num , fact) ; 

    return 0;
}
