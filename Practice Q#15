#include <stdio.h>
int main () {
    int n , count=0 , symmetry=0; 
    
    printf("NOTE: number of rows and coloumns has to be equal!\nEnter the number of rows and coloumns = ");
    scanf("%d" , &n) ; 
    
    int matrix[n][n] ; 
    
    printf("Enter the elements of matrix = ") ; 
    for(int i=0 ; i<n ; i++){
        for(int j=0 ; j<n ; j++){
            scanf("%d" , &matrix[i][j]); 
        }
        printf("\n"); 
    }
    
    printf("Matrix as per your input elements :\n") ; 
    for(int i=0; i<n ; i++) {
        for(int j=0 ; j<n ; j++){
            printf("%d " , matrix[i][j]);
        }
        printf("\n"); 
    }
    
    printf("\nTranspose of this matrix is : \n");
    for(int j=0 ; j<n ; j++) {
        for(int i=0 ; i<n ; i++) {
            printf("%d " , matrix[i][j]);
            if(i<j){
            count+=1 ; 
            if(matrix[i][j] == matrix[j][i]) {
                symmetry+=1; 
            }
            }
        }
        printf("\n");
    }
    
       if(symmetry == count) {
           printf("\nThe Matrix is Symmetric.");
       }
          else {
              printf("\nThe Matrix is Asymmetric.");
          }
    return 0 ; 
}
