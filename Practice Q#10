#include <stdio.h>
int main () {
    int n ; 
    int sum=0;
    float average ; 
    
    printf("Enter total numbers you want to input = ");
    scanf("%d" , &n) ; 
    
    int num[n]; 
    
    printf("Input the numbers = ") ; 
    
    for(int i=0 ; i<n ; i++) {
       scanf("%d" , &num[i]) ; 
       
      if(num[i]>0) {
        sum+=num[i]  ; 
      }
    }
    
    printf("Sum of all positive numbers is = %d" , sum);
    printf("\nAverage is= %.2f" , average=sum/n);Â 
}
